# API Keys (all optional - uses free local alternatives if not provided)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Optional: uses Ollama if not provided
# VOYAGE_API_KEY=your_voyage_api_key_here  # Optional: uses local embeddings if not provided

# Ollama Configuration (for free local LLM)
OLLAMA_MODEL=llama3.1  # or mistral, phi3, etc.

# Journal Configuration
NUM_ISSUES=10
DEFAULT_JOURNAL=plos-climate

# Text Processing Configuration
CHUNK_SIZE=1024
CHUNK_OVERLAP=100
MAX_CHUNK_SIZE=2048

# Embedding Configuration
EMBEDDING_MODEL=voyage-2
EMBEDDING_BATCH_SIZE=128

# LLM Configuration
LLM_MODEL=claude-3-5-haiku-20241022
LLM_TEMPERATURE=0.7
MAX_TOKENS=4096

# Vector Store Configuration
CHROMA_PERSIST_DIR=./data/vectorstore
CHROMA_COLLECTION_NAME=articles

# RAG Configuration
RETRIEVAL_TOP_K=5
CONTEXT_WINDOW=8000

# Scraper Configuration
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=1.0
MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# UI Configuration
STREAMLIT_PORT=8501
STREAMLIT_THEME=light
